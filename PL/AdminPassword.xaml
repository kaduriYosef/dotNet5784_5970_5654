<Window x:Class="PL.AdminPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Password Required" Height="200" Width="300">
    <StackPanel>
        <TextBlock Text="Enter Password:" Margin="10" TextAlignment="Center"/>
        <PasswordBox x:Name="passwordBox" Margin="10"/>
        <Button Style="{StaticResource button_circle}" Content="Submit" Click="SubmitButton_Click" Margin="10"/>
    </StackPanel>
</Window>

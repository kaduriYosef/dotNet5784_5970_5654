<Window x:Class="PL.Task.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Task"
        mc:Ignorable="d"
        DataContext="{Binding Task, RelativeSource={RelativeSource Self}, Mode=TwoWay}"
        Title="TaskWindow" Height="700" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Enter task's details" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Height="60" Foreground="#FFFFFFFF" />
        <Label Grid.Row="1" Grid.Column="0" Content="ID:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />
        <Label Grid.Row="2" Grid.Column="0" Content="Alias:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />
        <Label Grid.Row="3" Grid.Column="0" Content="Description:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />
        <Label Grid.Row="4" Grid.Column="0" Content="CreatedAtDate:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />
        <Label Grid.Row="5" Grid.Column="0" Content="RequiredEffortTime:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />
        <Label Grid.Row="6" Grid.Column="0" Content="Dependencies:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />
        <Label Grid.Row="7" Grid.Column="0" Content="Complexity:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />
        <!--<Label Grid.Row="8" Grid.Column="0" Content="DeadlineDate:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />-->
        <Label Grid.Row="8" Grid.Column="0" Content="Deliverables:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />
        <Label Grid.Row="9" Grid.Column="0" Content="Remarks:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />
        <Label Grid.Row="10" Grid.Column="0" Content="Engineer:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Height="60" Margin="40,0,0,0" Foreground="#FFFFFFFF" />

        <TextBox Grid.Row="1" Grid.Column="1" Height="30" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Height="30" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Height="30" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        <DatePickerTextBox Grid.Row="4" Grid.Column="1" Height="30" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center"
                   VerticalContentAlignment="Stretch"
                   HorizontalContentAlignment="Stretch"
                   Text="{Binding CreatedAtDate}"
                   IsEnabled="False"/>
        <TextBox Grid.Row="5" Grid.Column="1" Height="30" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        
        <ComboBox Name="dependencies" Grid.Row="6" Grid.Column="1"
                 Height="30" Width="300"  FontSize="20" 
                  VerticalAlignment="Center" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        
        <ComboBox Grid.Row="7" Grid.Column="1" 
                  ItemsSource="{Binding Source={StaticResource EngineerExperienceOnlyLevelsKey}}"
                  SelectedValue="{Binding Path=Complexity, Mode=TwoWay}" 
                  Height="30" Width="300"  FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBox Grid.Row="8" Grid.Column="1" Height="30" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        <TextBox Grid.Row="9" Grid.Column="1" Height="30" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        <ComboBox Grid.Row="10" Grid.Column="1" Height="30" Width="300"
                  HorizontalAlignment="Center" VerticalAlignment="Center" 
                  ItemsSource="{Binding EngineerInTask, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TaskWindow}}}" DisplayMemberPath="Id"/>

        <Button Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Content="{Binding Id,Mode=OneTime,Converter={StaticResource ConverIdToContentKey}}" Click="btnAddUpdate_Click" HorizontalAlignment="Center" Foreground="#FF1A337A" Background="#FFFFFFFF" Height="50" Width="100"/>
        <Grid.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#FF336699" Offset="5" />
                    <GradientStop Color="#FF125F61" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>
    </Grid>
</Window>

<Window x:Class="PL.ManagerInterface.AutoScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.ManagerInterface"
        mc:Ignorable="d"
        Title="AutoScheduleWindow" Height="450" Width="800">
    <Grid>
        <DatePicker SelectedDate="{Binding Date, Mode=TwoWay}" 
                    HorizontalAlignment="Left" Margin="320,166,0,0"  
                    VerticalAlignment="Top" Width="115" Height="36"
                    Text="Select a start date for the project"/>
        <Button Content="OK" Click="Button_OK" Margin="348,346,392,54"/>
    </Grid>
</Window>
